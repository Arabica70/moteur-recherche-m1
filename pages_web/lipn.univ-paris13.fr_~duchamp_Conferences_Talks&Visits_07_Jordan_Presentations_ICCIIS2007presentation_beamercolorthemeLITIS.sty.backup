\mode<presentation>

% Gestion des couleurs 
\definecolor{noir}{RGB}{0,0,0}
\definecolor{bleuL}{RGB}{13, 80, 128}
\definecolor{jauneL}{RGB}{255,204,0}
\definecolor{bleuclair}{RGB}{101,123,172}
\definecolor{rougeL}{RGB}{136,0,0}
\definecolor{blanc}{RGB}{255,255,255}
\definecolor{vertL}{RGB}{117,197,148}

\setbeamercolor{structure}{fg=bleuL}
\setbeamercolor{palette primary}{fg=bleuL,bg=bleuclair!50}
\setbeamercolor{palette secondary}{fg=bleuL,bg=bleuclair!50}
\setbeamercolor{palette tertiary}{fg=bleuL,bg=jauneL}
\setbeamercolor{palette quaternary}{fg=rougeL,bg=blanc}

\setbeamercolor{example text}{fg=vertL,bg=blanc}

\setbeamercolor{titlelike}{parent=palette secondary}

\setbeamercolor{block title}{fg=jauneL,bg=bleuclair}
\setbeamercolor{block title alerted}{use=alerted text,fg=noir,bg=rougeL!50}
\setbeamercolor{block title example}{use=example text,fg=bleuL,bg=example text.fg!75!bg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!25!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!25!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!25!bg}

\setbeamercolor{sidebar}{bg=jauneL!70}
  
\setbeamercolor{palette sidebar primary}{fg=bleuL}
\setbeamercolor{palette sidebar secondary}{fg=bleuL!75}
\setbeamercolor{palette sidebar tertiary}{fg=bleuL!75}
\setbeamercolor{palette sidebar quaternary}{fg=bleuL}

\setbeamercolor{separation line}{rougeL}
\setbeamercolor*{fine separation line}{}


\mode
<all>